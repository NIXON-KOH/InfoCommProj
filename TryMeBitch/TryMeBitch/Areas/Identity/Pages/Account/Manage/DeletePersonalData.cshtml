@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-2xl font-semibold text-gray-800 mb-4">@ViewData["Title"]</h3>

<div class="p-4 mb-6 border-l-4 border-yellow-400 bg-yellow-50">
    <p class="text-sm text-yellow-800">
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </p>
</div>

<div class="flex justify-center">
    <div class="w-full max-w-md">
        <form id="delete-user" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm" role="alert"></div>

            @if (Model.RequirePassword)
            {
                <div>
                    <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Input.Password"
                           class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500 sm:text-sm"
                           autocomplete="current-password"
                           aria-required="true"
                           placeholder="Please enter your password." />
                    <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
                </div>
            }

            <button type="submit"
                    class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                Delete data and close my account
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
