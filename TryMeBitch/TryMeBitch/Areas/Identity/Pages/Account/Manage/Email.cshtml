@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3 class="text-2xl font-semibold text-gray-800 mb-4">@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="flex justify-center">
    <div class="w-full max-w-md">
        <form id="email-form" method="post" class="space-y-6">
            <div asp-validation-summary="All" class="text-red-600 text-sm" role="alert"></div>

            @if (Model.IsEmailConfirmed)
            {
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <div class="relative">
                        <input asp-for="Email"
                               class="block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500 sm:text-sm bg-gray-100"
                               placeholder="Please enter your email."
                               disabled />
                        <div class="absolute inset-y-0 right-3 flex items-center pointer-events-none">
                            <span class="text-green-600 font-bold">✓</span>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="space-y-2">
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Email"
                           class="block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500 sm:text-sm bg-gray-100"
                           placeholder="Please enter your email."
                           disabled />
                    <button id="email-verification"
                            type="submit"
                            asp-page-handler="SendVerificationEmail"
                            class="text-sm text-rose-600 hover:text-rose-800 underline">
                        Send verification email
                    </button>
                </div>
            }

            <div>
                <label asp-for="Input.NewEmail" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.NewEmail"
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-rose-500 focus:ring-rose-500 sm:text-sm"
                       autocomplete="email"
                       aria-required="true"
                       placeholder="Please enter new email." />
                <span asp-validation-for="Input.NewEmail" class="text-red-600 text-sm"></span>
            </div>

            <button id="change-email-button"
                    type="submit"
                    asp-page-handler="ChangeEmail"
                    class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-rose-600 hover:bg-rose-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-rose-500">
                Change email
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
