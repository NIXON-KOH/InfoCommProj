@inject SignInManager<User> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="flex flex-col gap-2">
    <li>
        <a class="@ManageNavPages.IndexNavClass(ViewContext) block px-4 py-2 rounded-lg font-medium text-gray-700 hover:bg-gray-200 dark:text-gray-200 dark:hover:bg-gray-700"
           id="profile" asp-page="./Index">
            Profile
        </a>
    </li>
    <li>
        <a class="@ManageNavPages.EmailNavClass(ViewContext) block px-4 py-2 rounded-lg font-medium text-gray-700 hover:bg-gray-200 dark:text-gray-200 dark:hover:bg-gray-700"
           id="email" asp-page="./Email">
            Email
        </a>
    </li>
    <li>
        <a class="@ManageNavPages.ChangePasswordNavClass(ViewContext) block px-4 py-2 rounded-lg font-medium text-gray-700 hover:bg-gray-200 dark:text-gray-200 dark:hover:bg-gray-700"
           id="change-password" asp-page="./ChangePassword">
            Password
        </a>
    </li>

    @if (hasExternalLogins)
    {
        <li>
            <a class="@ManageNavPages.ExternalLoginsNavClass(ViewContext) block px-4 py-2 rounded-lg font-medium text-gray-700 hover:bg-gray-200 dark:text-gray-200 dark:hover:bg-gray-700"
               id="external-login" asp-page="./ExternalLogins">
                External logins
            </a>
        </li>
    }

    <li>
        <a class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) block px-4 py-2 rounded-lg font-medium text-gray-700 hover:bg-gray-200 dark:text-gray-200 dark:hover:bg-gray-700"
           id="two-factor" asp-page="./TwoFactorAuthentication">
            Two-factor authentication
        </a>
    </li>

    <li>
        <a class="@ManageNavPages.PersonalDataNavClass(ViewContext) block px-4 py-2 rounded-lg font-medium text-gray-700 hover:bg-gray-200 dark:text-gray-200 dark:hover:bg-gray-700"
           id="personal-data" asp-page="./PersonalData">
            Personal data
        </a>
    </li>
</ul>
