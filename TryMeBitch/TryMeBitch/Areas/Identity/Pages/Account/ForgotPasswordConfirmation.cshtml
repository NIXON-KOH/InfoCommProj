@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
    <div class="bg-white shadow-xl rounded-2xl p-8 max-w-md w-full text-center">
        <h1 class="text-2xl font-bold text-blue-600 mb-4">@ViewData["Title"]</h1>
        <p class="text-gray-700 text-base">
            Please check your email to reset your password.
        </p>

        <a href="/" class="mt-6 inline-block px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
            Return to Home
        </a>
    </div>
</div>
