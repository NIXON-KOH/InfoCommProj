@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
    <div class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-md">
        <h1 class="text-2xl font-bold text-gray-800 mb-4">@ViewData["Title"]</h1>
        <h2 class="text-lg text-gray-600 mb-6">Sign in to your account</h2>

        <form id="loginForm" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm" role="alert"></div>

            <!-- Email -->
            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.Email"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                       autocomplete="email"
                       aria-required="true"
                       placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
            </div>

            <!-- Password -->
            <div>
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.Password"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                       autocomplete="current-password"
                       aria-required="true"
                       placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
            </div>

            <!-- Remember Me -->
            <div class="flex items-center">
                <input asp-for="Input.RememberMe"
                       class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                <label asp-for="Input.RememberMe" class="ml-2 block text-sm text-gray-700">Remember me</label>
            </div>

            <!-- Submit Button -->
            <button id="login-submit"
                    type="submit"
                    class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                Log in
            </button>

            <!-- Links -->
            <div class="flex justify-between text-sm text-blue-600 mt-4">
                <a asp-page="./ForgotPassword" class="hover:underline">Forgot password?</a>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="hover:underline">Register</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
