@page
@model LockoutModel
@{
    ViewData["Title"] = "Locked out";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
    <div class="bg-white shadow-xl rounded-2xl p-8 max-w-md w-full text-center">
        <svg class="mx-auto h-12 w-12 text-red-500 mb-4" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round"
                  d="M12 9v2m0 4h.01M4.93 4.93a10 10 0 0114.14 0m-14.14 0a10 10 0 000 14.14m0-14.14L12 12m0 0l7.07 7.07m-7.07-7.07L4.93 19.07" />
        </svg>
        <h1 class="text-2xl font-bold text-red-600 mb-2">@ViewData["Title"]</h1>
        <p class="text-gray-700">This account has been locked out. Please try again later.</p>

        <a href="/" class="mt-6 inline-block px-6 py-2 text-white bg-red-600 hover:bg-red-700 rounded-lg shadow">
            Return to Home
        </a>
    </div>
</div>
