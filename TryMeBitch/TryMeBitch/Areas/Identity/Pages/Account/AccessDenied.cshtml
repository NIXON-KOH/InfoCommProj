@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white shadow-xl rounded-2xl p-8 max-w-md w-full text-center">
        <div class="mb-4">
            <svg class="mx-auto h-12 w-12 text-red-500" fill="none" stroke="currentColor" stroke-width="2"
                 viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="M10.29 3.86L1.82 18a1 1 0 00.86 1.5h18.64a1 1 0 00.86-1.5L13.71 3.86a1 1 0 00-1.72 0zM12 9v4m0 4h.01" />
            </svg>
        </div>
        <h1 class="text-2xl font-bold text-red-600">@ViewData["Title"]</h1>
        <p class="mt-2 text-gray-700">You do not have access to this resource.</p>
        <a href="/Identity/Account/Manage" class="mt-6 inline-block px-6 py-2 text-white bg-red-600 hover:bg-red-700 rounded-lg shadow">
            Go to Home
        </a>
    </div>
</div>
