@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
    <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-md">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">@ViewData["Title"]</h1>
        <h2 class="text-lg text-gray-700 mb-6">Reset your password.</h2>
        <hr class="border-gray-300 mb-6" />

        <form method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />

            <!-- Email -->
            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.Email"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                       autocomplete="username"
                       aria-required="true"
                       placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
            </div>

            <!-- Password -->
            <div>
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.Password"
                       type="password"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="Please enter your password." />
                <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
            </div>

            <!-- Confirm Password -->
            <div>
                <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.ConfirmPassword"
                       type="password"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="Please confirm your password." />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-sm"></span>
            </div>

            <button type="submit"
                    class="w-full py-3 bg-blue-600 text-white rounded-lg text-lg font-semibold hover:bg-blue-700 transition">
                Reset
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
