@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
    <div class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-md">
        <h1 class="text-2xl font-bold text-gray-800 mb-2">@ViewData["Title"]</h1>
        <h2 id="external-login-title" class="text-lg font-medium text-gray-700 mb-4">
            Associate your @Model.ProviderDisplayName account.
        </h2>
        <hr class="mb-4 border-gray-300" />

        <p id="external-login-description" class="text-sm text-blue-600 mb-6">
            You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.<br />
            Please enter an email address for this site below and click the <strong>Register</strong> button to finish logging in.
        </p>

        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm" role="alert"></div>

            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.Email"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                       autocomplete="email"
                       placeholder="Please enter your email." />
                <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
            </div>

            <button type="submit"
                    class="w-full px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                Register
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
