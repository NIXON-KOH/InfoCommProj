@model TryMeBitch.Models.Station
@{
    ViewData["Title"] = "Create Station";
    var mrtLines = new Dictionary<string, string> {
        { "North South Line", "bg-red-600" },
        { "East West Line", "bg-green-600" },
        { "North East Line", "bg-purple-600" },
        { "Circle Line", "bg-yellow-500 text-black" },
        { "Downtown Line", "bg-blue-700" },
        { "Thomson-East Coast Line", "bg-amber-700" }
    };
}

<div class="min-h-screen bg-white dark:bg-gray-950 text-gray-800 dark:text-gray-100 py-10 px-6">
    <div class="max-w-3xl mx-auto">
        <h1 class="text-4xl font-bold text-center mb-10 tracking-tight">
            🚉 Create New Station
        </h1>

        <form asp-action="Create" class="bg-white dark:bg-gray-900 shadow-2xl rounded-2xl p-8 space-y-6 ring-1 ring-gray-200 dark:ring-gray-800 transition-all">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <!-- Station Name -->
                <div>
                    <label asp-for="StationName" class="block mb-1 text-sm font-medium">Station Name</label>
                    <input asp-for="StationName" class="w-full px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-800 border border-transparent focus:ring-2 focus:ring-indigo-500" autofocus />
                    <span asp-validation-for="StationName" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <!-- Type Toggle -->
                <div>
                    <label class="block mb-1 text-sm font-medium">Type</label>
                    <div class="flex gap-3">
                        <label class="flex items-center space-x-2 cursor-pointer">
                            <input type="radio" asp-for="Type" value="Station" class="hidden peer" checked />
                            <div class="px-4 py-2 rounded-lg border border-gray-300 peer-checked:bg-indigo-600 peer-checked:text-white transition-all">Station</div>
                        </label>
                        <label class="flex items-center space-x-2 cursor-pointer">
                            <input type="radio" asp-for="Type" value="Interchange" class="hidden peer" />
                            <div class="px-4 py-2 rounded-lg border border-gray-300 peer-checked:bg-indigo-600 peer-checked:text-white transition-all">Interchange</div>
                        </label>
                    </div>
                    <span asp-validation-for="Type" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <!-- Station Line with Colors -->
                <div>
                    <label asp-for="StationLine" class="block mb-1 text-sm font-medium">MRT Line</label>
                    <select asp-for="StationLine" class="w-full px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-800 border border-transparent focus:ring-2 focus:ring-indigo-500" onchange="this.className=this.options[this.selectedIndex].dataset.color + ' w-full px-4 py-2 rounded-lg border border-transparent'">
                        <option class="bg-gray-200 text-black">-- Select Line --</option>
                        @foreach (var line in mrtLines)
                        {
                            <option value="@line.Key" data-color="@line.Value" class="@line.Value">@line.Key</option>
                        }
                    </select>
                    <span asp-validation-for="StationLine" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <!-- Next Station -->
                <div>
                    <label asp-for="NextStation" class="block mb-1 text-sm font-medium">Next Station</label>
                    <input asp-for="NextStation" class="w-full px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-800 border border-transparent focus:ring-2 focus:ring-indigo-500" />
                    <span asp-validation-for="NextStation" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <!-- Latitude -->
                <div>
                    <label asp-for="Lat" class="block mb-1 text-sm font-medium">Latitude</label>
                    <input asp-for="Lat" type="number" step="any" class="w-full px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-800 border border-transparent focus:ring-2 focus:ring-indigo-500" />
                    <span asp-validation-for="Lat" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <!-- Longitude -->
                <div>
                    <label asp-for="Lon" class="block mb-1 text-sm font-medium">Longitude</label>
                    <input asp-for="Lon" type="number" step="any" class="w-full px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-800 border border-transparent focus:ring-2 focus:ring-indigo-500" />
                    <span asp-validation-for="Lon" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <!-- Distance -->
                <div>
                    <label asp-for="Distance" class="block mb-1 text-sm font-medium">Distance (km)</label>
                    <input asp-for="Distance" type="number" step="0.01" class="w-full px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-800 border border-transparent focus:ring-2 focus:ring-indigo-500" />
                    <span asp-validation-for="Distance" class="text-red-500 text-xs mt-1 block"></span>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex justify-between items-center mt-8">
                <a asp-action="Index" class="text-sm text-gray-500 hover:text-indigo-500 transition">← Back to List</a>
                <button type="submit" class="inline-flex items-center px-6 py-2 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold rounded-lg transition focus:ring-2 focus:ring-indigo-400 focus:outline-none">
                    💾 Save Station
                </button>
            </div>
        </form>
    </div>
</div>
