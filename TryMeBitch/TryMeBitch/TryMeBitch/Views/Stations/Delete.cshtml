@model TryMeBitch.Models.Station
@{
    ViewData["Title"] = "Delete Station";
}

<div class="min-h-screen bg-white dark:bg-gray-900 text-gray-800 dark:text-gray-100 px-6 py-10 flex flex-col items-center justify-center">
    <div class="max-w-2xl w-full bg-gray-50 dark:bg-gray-800 rounded-2xl shadow-lg p-8">
        <h1 class="text-3xl font-semibold mb-6 text-center text-red-600 dark:text-red-400">Delete Station</h1>

        <div class="space-y-4 text-sm md:text-base">
            <p class="text-gray-700 dark:text-gray-300">Are you sure you want to permanently delete the following station?</p>

            <div class="grid grid-cols-2 gap-4 text-gray-900 dark:text-gray-100 border-t border-b py-4 dark:border-gray-700">
                <div class="font-semibold">Name:</div><div>@Model.StationName</div>
                <div class="font-semibold">Type:</div><div>@Model.Type</div>
                <div class="font-semibold">Line:</div><div>@Model.StationLine</div>
                <div class="font-semibold">Latitude:</div><div>@Model.Lat</div>
                <div class="font-semibold">Longitude:</div><div>@Model.Lon</div>
            </div>

            <form asp-action="Delete" method="post" onsubmit="return confirmDelete()" class="mt-6 flex flex-col items-center gap-4">
                <input type="hidden" asp-for="StationID" />

                <div class="flex gap-4">
                    <a asp-action="Index" class="px-4 py-2 rounded-lg border border-gray-400 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition">
                        Cancel
                    </a>
                    <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-2 rounded-lg transition">
                        Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


    <script>
        function confirmDelete() {
            return confirm("⚠️ This action is irreversible.\n\nDo you really want to delete this station?");
        }
    </script>

