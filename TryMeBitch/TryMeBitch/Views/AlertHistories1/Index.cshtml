@model IEnumerable<TryMeBitch.Models.AlertHistory>
@{
    ViewData["Title"] = "Alert History";
}

<div class="mx-auto px-8 py-6 space-y-6">
    <h1 class="text-3xl font-bold text-zinc-800 dark:text-zinc-100">Alert History</h1>

    <div class="bg-white dark:bg-zinc-800 shadow-lg rounded-2xl overflow-x-auto">
        <table class="w-full table-auto min-w-[900px]">
            <thead class="bg-rose-100 dark:bg-rose-800">
                <tr>
                    <th class="px-6 py-4 text-left text-lg font-semibold text-rose-700 dark:text-rose-200">Alert Name</th>
                    <th class="px-6 py-4 text-left text-lg font-semibold text-rose-700 dark:text-rose-200">Role</th>
                    <th class="px-6 py-4 text-left text-lg font-semibold text-rose-700 dark:text-rose-200">Fired At</th>
                    <th class="px-6 py-4 text-left text-lg font-semibold text-rose-700 dark:text-rose-200">Recipient</th>
                    <th class="px-6 py-4 text-left text-lg font-semibold text-rose-700 dark:text-rose-200">Message</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-zinc-200 dark:divide-zinc-700">
                @foreach (var h in Model)
                {
                    <tr class="bg-zinc-50 dark:bg-zinc-700 even:bg-zinc-100 dark:even:bg-zinc-600 hover:bg-zinc-200 dark:hover:bg-zinc-500 transition-colors">
                        <td class="px-6 py-4 text-base font-medium text-zinc-800 dark:text-zinc-100">@h.Definition.Name</td>
                        <td class="px-6 py-4 text-base text-zinc-700 dark:text-zinc-200">@h.Definition.Role</td>
                        <td class="px-6 py-4 text-base text-zinc-700 dark:text-zinc-200">@h.FiredAt.ToString("MMM d, yyyy h:mm tt")</td>
                        <td class="px-6 py-4 text-base text-zinc-700 dark:text-zinc-200">@h.RecipientEmail</td>
                        <td class="px-6 py-4 text-base text-zinc-700 dark:text-zinc-200">
                            @Html.Raw(h.MessageSent)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>