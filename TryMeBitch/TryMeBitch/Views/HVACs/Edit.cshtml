@model TryMeBitch.Models.Threshold
@{
    ViewData["Title"] = "Edit Threshold";
}

<div class="max-w-lg mx-auto mt-10 p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md">
    <h1 class="text-2xl font-semibold mb-6 text-gray-900 dark:text-gray-100">Edit Threshold</h1>

    @if (TempData["Success"] != null)
    {
        <div class="mb-4 p-3 bg-green-100 text-green-700 rounded">
            @TempData["Success"]
        </div>
    }

    <form asp-action="Edit" method="post" class="space-y-4">
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="temperature" class="block text-gray-700 dark:text-gray-200">Temperature</label>
            <input asp-for="temperature" type="number" step="0.01"
                   class="w-full mt-1 p-2 border border-gray-300 rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-100" />
            <span asp-validation-for="temperature" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="humidity" class="block text-gray-700 dark:text-gray-200">Humidity</label>
            <input asp-for="humidity" type="number" step="0.01"
                   class="w-full mt-1 p-2 border border-gray-300 rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-100" />
            <span asp-validation-for="humidity" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="psi" class="block text-gray-700 dark:text-gray-200">PSI</label>
            <input asp-for="psi" type="number" step="0.01"
                   class="w-full mt-1 p-2 border border-gray-300 rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-100" />
            <span asp-validation-for="psi" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="GasDetection" class="block text-gray-700 dark:text-gray-200">Gas Detection</label>
            <input asp-for="GasDetection" type="number" step="0.01"
                   class="w-full mt-1 p-2 border border-gray-300 rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-gray-100" />
            <span asp-validation-for="GasDetection" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit"
                class="w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition">
            Update
        </button>
    </form>
</div>
