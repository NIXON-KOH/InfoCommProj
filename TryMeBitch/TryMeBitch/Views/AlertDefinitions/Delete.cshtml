@model TryMeBitch.Models.AlertDefinition

@{
    ViewData["Title"] = "Delete Alert Definition";
}

<div class="max-w-3xl mx-auto p-6">
    <h1 class="text-2xl font-semibold mb-6">Delete Alert Definition</h1>

    <div class="bg-white dark:bg-zinc-800 shadow rounded-lg p-6 space-y-4">
        <p class="text-lg">
            Are you sure you want to delete the following alert?
        </p>

        <dl class="grid grid-cols-1 gap-4 text-sm text-gray-700 dark:text-gray-200">
            <div><span class="font-medium">Name:</span> @Model.Name</div>
            <div><span class="font-medium">Type:</span> @Model.Type</div>
            <div><span class="font-medium">Target:</span> @Model.TargetId</div>
            <div><span class="font-medium">Role:</span> @Model.Role</div>
            <div><span class="font-medium">Threshold:</span> @Model.Threshold% </div>
            <div><span class="font-medium">Email Message:</span> @Model.MessageTemplate</div>
        </dl>

        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="flex space-x-4 pt-4">
            <button type="submit"
                    class="px-6 py-2 bg-red-600 hover:bg-red-700 text-white rounded shadow">
                Yes, Delete
            </button>
            <a asp-action="Index"
               class="px-6 py-2 bg-gray-300 hover:bg-gray-400 dark:bg-gray-600 dark:hover:bg-gray-500 text-gray-800 dark:text-gray-100 rounded shadow">
                Cancel
            </a>
        </form>
    </div>
</div>
