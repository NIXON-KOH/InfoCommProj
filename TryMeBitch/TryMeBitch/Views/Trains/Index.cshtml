@model IEnumerable<TryMeBitch.Models.Joel_Train>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Trains";
}

<div class="max-w-6xl mx-auto my-12">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-semibold text-gray-800 dark:text-gray-100">Trains</h1>
        <a asp-action="Create"
           class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg
              transition-colors duration-200">
            + New Train
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-zinc-700 bg-white dark:bg-zinc-800 rounded-lg shadow">
            <thead class="bg-gray-50 dark:bg-zinc-700">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Train ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider"># Carriages</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider"># Type</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider"># Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Active?</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white dark:bg-zinc-800 divide-y divide-gray-200 dark:divide-zinc-700">
                @foreach (var t in Model)
                {
                    <tr class="hover:bg-gray-50 dark:hover:bg-zinc-700 transition-colors duration-150">
                        <td class="px-6 py-4 whitespace-nowrap text-gray-900 dark:text-gray-100">@t.TrainId</td>
                        <td class="px-6 py-4 whitespace-nowrap text-gray-900 dark:text-gray-100">@t.Name</td>
                        <td class="px-6 py-4 whitespace-nowrap text-gray-900 dark:text-gray-100">@t.NumCarriages</td>
                        <td class="px-6 py-4 whitespace-nowrap text-gray-900 dark:text-gray-100">@t.Line</td>
                        <td class="px-6 py-4 whitespace-nowrap text-gray-900 dark:text-gray-100">@t.Status</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            @if (t.IsActive)
                            {
                                <span class="inline-flex px-2 text-xs font-semibold leading-5
                                      text-green-800 bg-green-100 dark:text-green-100 dark:bg-green-900 rounded-full">
                                    Yes
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex px-2 text-xs font-semibold leading-5
                                      text-red-800 bg-red-100 dark:text-red-100 dark:bg-red-900 rounded-full">
                                    No
                                </span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                            <a asp-action="Details" asp-route-id="@t.Id"
                               class="text-indigo-600 dark:text-indigo-300 hover:underline">Details</a>
                            <a asp-action="Edit" asp-route-id="@t.Id"
                               class="text-blue-600 dark:text-blue-300 hover:underline">Edit</a>
                            <a asp-action="Delete" asp-route-id="@t.Id"
                               class="text-red-600 dark:text-red-300 hover:underline">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
