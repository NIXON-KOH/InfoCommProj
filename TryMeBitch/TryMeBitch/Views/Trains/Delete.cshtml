@model TryMeBitch.Models.Joel_Train
@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete Train";
}

<div class="max-w-md mx-auto my-12 p-6 bg-white rounded-lg shadow-md">
    <h1 class="text-3xl font-semibold mb-6 text-center">Delete Train</h1>

    <div class="mb-6 text-center">
        <p class="text-gray-700">Are you sure you want to delete this train?</p>
        <p class="mt-2 font-bold">@Model.TrainId - @Model.Name</p>
    </div>

    <form asp-action="Delete" method="post" class="flex justify-center space-x-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit"
                class="px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
            Yes, Delete
        </button>
        <a asp-action="Index"
           class="px-6 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300">
            Cancel
        </a>
    </form>
</div>
