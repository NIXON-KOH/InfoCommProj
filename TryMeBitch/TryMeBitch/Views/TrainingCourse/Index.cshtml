@model IEnumerable<TryMeBitch.Models.TrainingCourse>

@{
    ViewData["Title"] = "Training Courses";
}

<script src="https://www.gstatic.com/dialogflow-console/fast/messenger/bootstrap.js?v=1"></script> <df-messenger intent="WELCOME" chat-title="SMRT_Staff_TrainCourse_Enquiry" agent-id="dafbc599-accb-4b51-a258-1b35052cb2e9" language-code="en"></df-messenger>

<div class="max-w-6xl mx-auto my-12">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-semibold text-gray-800 dark:text-gray-100">Training Courses</h1>

        <div class="flex space-x-4">
            <a download="Evacuation_Plan.pdf" href="/Processed/evacuation-planning-guidelines-(approved-mar-2018).pdf"
               class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg
                  transition-colors duration-200">
                Evacuation
            </a>
            <a asp-action="Create"
               class="px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg
                  transition-colors duration-200">
                + Create New
            </a>
        </div>
    </div>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-zinc-700 bg-white dark:bg-zinc-800 rounded-lg shadow">
            <thead class="bg-gray-50 dark:bg-zinc-700">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                        Email
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                        Course Name
                    </th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white dark:bg-zinc-800 divide-y divide-gray-200 dark:divide-zinc-700">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50 dark:hover:bg-zinc-700 transition-colors duration-150">
                        <td class="px-6 py-4 whitespace-nowrap text-gray-900 dark:text-gray-100">
                            @item.Email
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-gray-900 dark:text-gray-100">
                            @item.CourseName
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                            <a asp-action="Edit" asp-route-id="@item.InputId"
                               class="text-green-600 dark:text-green-400 hover:underline">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.InputId"
                               class="text-blue-600 dark:text-blue-400 hover:underline">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.InputId"
                               class="text-red-600 dark:text-red-400 hover:underline">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
