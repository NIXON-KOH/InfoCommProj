@model TryMeBitch.Models.TrainingCourse

@{
    ViewData["Title"] = "Create Training Course";
}

<div class="max-w-3xl mx-auto my-12 p-6
            bg-white dark:bg-zinc-800
            rounded-xl shadow-lg
            transition-colors duration-200">

    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-semibold text-gray-800 dark:text-gray-100">Create Training Course</h1>
        <a asp-action="Index"
           class="px-4 py-2 bg-gray-600 dark:bg-zinc-600
                  text-white rounded-lg
                  hover:bg-gray-700 dark:hover:bg-zinc-500
                  transition-colors duration-200">
            Back to List
        </a>
    </div>

    <form asp-action="Create" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600 dark:text-red-400"></div>

        <!-- Email -->
        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700 dark:text-gray-300"></label>
            <input asp-for="Email"
                   class="mt-1 block w-full
                          bg-white dark:bg-zinc-700
                          border border-gray-300 dark:border-zinc-600
                          text-gray-900 dark:text-gray-100
                          rounded-lg shadow-sm
                          px-4 py-2
                          focus:outline-none focus:ring-2 focus:ring-indigo-500
                          transition-colors duration-200" />
            <span asp-validation-for="Email" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
        </div>

        <!-- Course Name -->
        <div>
            <label asp-for="CourseName" class="block text-sm font-medium text-gray-700 dark:text-gray-300"></label>
            <input asp-for="CourseName"
                   class="mt-1 block w-full
                          bg-white dark:bg-zinc-700
                          border border-gray-300 dark:border-zinc-600
                          text-gray-900 dark:text-gray-100
                          rounded-lg shadow-sm
                          px-4 py-2
                          focus:outline-none focus:ring-2 focus:ring-indigo-500
                          transition-colors duration-200" />
            <span asp-validation-for="CourseName" class="text-red-600 dark:text-red-400 text-sm mt-1 block"></span>
        </div>

        <!-- Buttons -->
        <div class="flex justify-end space-x-4 pt-4 border-t border-gray-200 dark:border-zinc-700">
            <button type="submit"
                    class="px-6 py-2
                           bg-indigo-600 dark:bg-indigo-500
                           text-white rounded-lg
                           hover:bg-indigo-700 dark:hover:bg-indigo-400
                           transition-colors duration-200">
                Create
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
