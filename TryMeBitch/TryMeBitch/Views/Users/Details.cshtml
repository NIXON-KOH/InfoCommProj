@model TryMeBitch.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="max-w-xl mx-auto my-12 p-6
            bg-white dark:bg-zinc-800
            rounded-lg shadow-md
            transition-colors duration-200">

    <h1 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-100 text-center">User Details</h1>

    <div class="bg-gray-100 dark:bg-zinc-700 p-4 rounded-lg space-y-2">
        <p class="text-gray-800 dark:text-gray-100"><strong>Email:</strong> @Model.Email</p>
        <p class="text-gray-800 dark:text-gray-100"><strong>Phone:</strong> @Model.PhoneNumber</p>
        <p class="text-gray-800 dark:text-gray-100"><strong>Created:</strong> @Model.CreatedAt</p>
        <p class="text-gray-800 dark:text-gray-100"><strong>Updated:</strong> @Model.UpdatedAt</p>
        <p class="text-gray-800 dark:text-gray-100"><strong>Key:</strong> @Model.Key</p>
    </div>

    <div class="mt-6 flex justify-end space-x-4">
        <a class="px-4 py-2
                  bg-green-600 dark:bg-green-500
                  text-white rounded
                  hover:bg-green-700 dark:hover:bg-green-400
                  transition-colors duration-200"
           asp-action="Edit" asp-route-id="@Model.Id">
            Edit
        </a>
        <a class="px-4 py-2
                  bg-red-600 dark:bg-red-500
                  text-white rounded
                  hover:bg-red-700 dark:hover:bg-red-400
                  transition-colors duration-200"
           asp-action="Delete" asp-route-id="@Model.Id">
            Delete
        </a>
        <a class="px-4 py-2
                  bg-blue-600 dark:bg-blue-500
                  text-white rounded
                  hover:bg-blue-700 dark:hover:bg-blue-400
                  transition-colors duration-200"
           asp-action="Index">
            Back to List
        </a>
    </div>
</div>
