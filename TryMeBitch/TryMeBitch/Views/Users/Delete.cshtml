@model TryMeBitch.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="max-w-xl mx-auto my-12 p-6
            bg-white dark:bg-zinc-800
            rounded-lg shadow-md
            transition-colors duration-200">

    <h1 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-100 text-center">Delete User</h1>

    <div class="bg-gray-100 dark:bg-zinc-700 p-4 rounded-lg">
        <p class="text-gray-800 dark:text-gray-100 mb-2">Are you sure you want to delete this user?</p>
        <p class="text-gray-800 dark:text-gray-100"><strong>Email:</strong> @Model.Email</p>
        <p class="text-gray-800 dark:text-gray-100"><strong>Phone:</strong> @Model.PhoneNumber</p>

        <form asp-action="DeleteConfirmed" method="post" class="mt-6 flex justify-end space-x-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit"
                    onclick="return confirmDelete();"
                    class="px-4 py-2
                   bg-red-600 dark:bg-red-500
                   text-white
                   rounded hover:bg-red-700 dark:hover:bg-red-400
                   transition-colors duration-200">
                Delete
            </button>
            <a asp-action="Index"
               class="px-4 py-2
              bg-gray-600 dark:bg-zinc-600
              text-white
              rounded hover:bg-gray-700 dark:hover:bg-zinc-500
              transition-colors duration-200">
                Cancel
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you absolutely sure you want to delete this user? This action cannot be undone.");
        }
    </script>
}
