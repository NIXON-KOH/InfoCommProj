
@model TryMeBitch.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<div class="max-w-xl mx-auto my-12 p-6
            bg-white dark:bg-zinc-800
            rounded-lg shadow-md
            transition-colors duration-200">

    <h1 class="text-2xl font-bold mb-6 text-gray-800 dark:text-gray-100 text-center">Edit User</h1>

    <form asp-action="Edit" method="post" class="space-y-6">
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
            <input asp-for="Email"
                   class="mt-1 block w-full
                          bg-white dark:bg-zinc-700
                          border border-gray-300 dark:border-zinc-600
                          text-gray-900 dark:text-gray-100
                          rounded-md shadow-sm
                          focus:outline-none focus:ring-2 focus:ring-green-500
                          transition-colors duration-200" />
        </div>

        <div>
            <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Phone Number</label>
            <input asp-for="PhoneNumber"
                   class="mt-1 block w-full
                          bg-white dark:bg-zinc-700
                          border border-gray-300 dark:border-zinc-600
                          text-gray-900 dark:text-gray-100
                          rounded-md shadow-sm
                          focus:outline-none focus:ring-2 focus:ring-green-500
                          transition-colors duration-200" />
        </div>

        <div class="flex justify-end space-x-4 pt-4 border-t border-gray-200 dark:border-zinc-700">
            <a asp-action="Index"
               class="px-4 py-2
                      bg-gray-600 dark:bg-zinc-600
                      text-white rounded
                      hover:bg-gray-700 dark:hover:bg-zinc-500
                      transition-colors duration-200">
                Cancel
            </a>
            <button type="submit"
                    class="px-4 py-2
                           bg-green-600 dark:bg-green-500
                           text-white rounded
                           hover:bg-green-700 dark:hover:bg-green-400
                           transition-colors duration-200">
                Save
            </button>
        </div>
    </form>
</div>
